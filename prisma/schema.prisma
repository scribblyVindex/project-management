model Project {
    id            String    @id @unique @default(cuid())
    name          String?
    email         String?
    emailVerified DateTime?
    image         String?
    description   String?
    adminAccess   User[]    @relation(name: "projectAdminAccess")
    memberAccess  User[]    @relation(name: "projectMemberAccess")
    prefix        String
    tags          String[]
    status        String[]
    priority      String[]
    invitations   String[]
}
